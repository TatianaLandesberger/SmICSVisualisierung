{
    "$id": "data/DiagnosticResults",
    "$schema": "http://json-schema.org/schema#",
    "type": "array",
    "uniqueItems": true,
    "items": {
        "type": "object",
        "properties": {
            "PatientID": {
                "type": "string"
            },
            "ICD_Code": {
                "type": "string",
                "pattern": "[A-Z][0-9][0-9AB]\\.?[0-9A-Z]{0,4}"
            },
            "Diagnose": {
                "type": "string",
                "minLength": 1,
                "description": "this is generated readable text from the ICD code"
            },
            "Freitextbeschreibung": {
                "oneOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "null"
                    }
                ]
            },
            "DokumentationsDatum": {
                "type": "string",
                "moment": {
                    "validate": [
                        {
                            "test": "isSameOrAfter",
                            "value": "1980-01-01T00:00:00Z"
                        },
                        {
                            "test": "isSameOrBefore",
                            "value": "2100-01-01T00:00:00Z"
                        }
                    ]
                }
            }
        },
        "required": [
            "PatientID",
            "ICD_Code",
            "Diagnose",
            "Freitextbeschreibung",
            "DokumentationsDatum"
        ]
    }
}
